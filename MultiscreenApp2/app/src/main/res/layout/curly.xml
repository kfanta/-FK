<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3F2F6">

    <ImageButton
        android:id="@+id/coily"
        android:layout_width="238dp"
        android:layout_height="208dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threeahair" />

    <ImageButton
        android:id="@+id/curlyy"
        android:layout_width="238dp"
        android:layout_height="221dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coily"
        app:srcCompat="@drawable/threebhair" />

    <ImageButton
        android:id="@+id/curlyyy"
        android:layout_width="231dp"
        android:layout_height="206dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curlyy"
        app:srcCompat="@drawable/threechair" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="408dp"
        android:layout_height="70dp"
        android:fontFamily="@font/arizonia"
        android:gravity="center"
        android:text="Curly Hair"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toEndOf="@+id/coily"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/quizzz" />
</androidx.constraintlayout.widget.ConstraintLayout>